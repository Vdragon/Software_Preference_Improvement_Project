<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
	<!-- 範本 
  <property>
    <name></name>
		<description></description>
    <value></value>
  </property>
	-->
	
  <property>
		<!-- specify this so that running 'hadoop namenode -format' formats the right dir -->
		<name>dfs.name.dir</name>
		<description>
			保存 Namenode 資料的目錄
			注意如果使用預設值需自行建立 Unix 權限設定啟動 sticky 位元的 /var/lib/hadoop/Distribute_filesystem 目錄
		</description>
		 <value>/var/lib/hadoop/Distributed_filesystem/${user.name}/Namenode</value>
	</property>
		
  <property>
    <name>dfs.data.dir</name>
		<description>
			保存 Datanode 資料的目錄
			注意如果使用預設值需自行建立 Unix 權限設定啟動 sticky 位元的 /var/lib/hadoop/Distribute_filesystem 目錄
		</description>
		<value>/var/lib/hadoop/Distributed_filesystem/${user.name}/Datanode</value>
  </property>
	
  <property>
    <name>dfs.replication</name>
		<description>
			分散式檔案系統中同一資料區塊備份的數量
		</description>
    <value>1</value>
  </property>
	
	<!-- Vdragon: 允許權限控管
		<property>
			<name>dfs.permissions</name>
			<value>false</value>
		</property>
	-->
	
  <!-- Immediately exit safemode as soon as one DataNode checks in. 
       On a multi-node cluster, these configurations must be removed.  -->
  <property>
		<name>dfs.safemode.min.datanodes</name>
		<description>
			離開安全模式所需的最少上線 datanode 數
		</description>
		<value>1</value>
  </property>
  <property>
    <name>dfs.safemode.extension</name>
		<description>
			當滿足 dfs.safemode.min.datanode 上線數量後自動離開安全模式的倒數微秒數
		</description>
		<value>5000</value>
  </property>

</configuration>
